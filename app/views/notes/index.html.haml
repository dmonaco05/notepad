.wrapper_with_padding
  #notes.clearfix
    - unless @notes.blank?
      - @notes.each do |note|
        %a{href: (url_for [note])}
          .note
            %p.title= note.title
            %p.date
              = time_ago_in_words(note.created_at)
              ago
    - else
      %h2 Add notes
      %p You don't have any notes yet, go ahead and create some now.
      %button= link_to "Add Notes", new_note_path
